#include "job/clusteralgorithms.fcl"

BEGIN_PROLOG

standard_dbcluster:
{
 module_type:     "DBcluster"
 HitsModuleLabel: "ffthit"
 DBScanAlg:       @local::standard_dbscanalg
}

standard_fuzzycluster:
{
 module_type:     "fuzzyCluster"
 HitsModuleLabel: "ffthit"
