  RandomNumberGenerator: {} 
  message:      @local::standard_info
  user:         @local::dunefd_simulation_services
}
services.user.Geometry: @local::dune10kt_workspace_geo

source:
{
  module_type: RootInput
  firstEvent : 1
  maxEvents:  -1
}


outputs:{}


physics:
{

  analyzers:
  {
    NeutrinoTrackingEff: 
    {
      module_type:      	"NeutrinoTrackingEff"
