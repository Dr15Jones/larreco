      LeptonPDGcode:		13
      MaxNeutrinoE:		25.0
      MaxLeptonP:               3.0
      SaveMCTree:		false
      FidVolCutX:               10
      FidVolCutY:               10
      FidVolCutZ:               10

    }
  }
  analysis: [ NeutrinoTrackingEff ] //Directory for histograms
  end_paths: [ analysis ]
